<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Cgminer monitor</title>
</head>
<body>

<div class="container">
    <form>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Status</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="10">{{ .status }}</textarea>
        </div>
    </form>
    <form>
        <div class="form-group">
            <label for="exampleFormControlTextarea2">Pool info</label>
            <textarea class="form-control" id="exampleFormControlTextarea2" rows="10">{{ .poolInfo }}</textarea>
        </div>
    </form>
    <form>
        <div class="form-group">
            <label for="exampleFormControlTextarea3">Miners</label>
            <textarea class="form-control" id="exampleFormControlTextarea3" rows="10">{{ .devs }}</textarea>
        </div>
    </form>
</div>
</body>
</html>